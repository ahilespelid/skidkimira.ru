<div class="col-md-12">
    <div class="portlet box light-grey">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-globe"></i>Каталоги
            </div>
            <div class="actions">
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover datatable" id="tableManaged">
                <thead>
                <tr>
                    <th>companyName</th>
                    <th>name</th>
                    <th>validity</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    {% for data in companyCatalogs %}
                    <tr id="{{data.id}}" class="odd gradeX">
                        <td>{{data.companyName}}</td>
                        <td>{{data.name}}</td>
                        <td>{{data.validity}}</td>
                        <td>
                            <a href="{{site_url()}}moderator/companyCatalog/{{data.id}}" target="_blank" class="btn btn-outline purple btn-sm"><i class="fa fa-pencil-square-o"></i> Редактировать </a>
                            <a href="#basic" data-toggle="modal" onClick="urlToModal('{{site_url()}}{{uri_string()}}/{{data.id}}/remove');" class="btn btn-outline red btn-sm"><i class="fa fa-trash-o"></i> Удалить</a>         
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>  
                {% include 'moderator/parts/removeModal.twig' %}               
            </table>  
        </div>
    </div>
</div>