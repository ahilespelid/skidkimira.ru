{% extends "admin/adminLayout.twig" %}
{% block content %}
            <div class="row">
				<div class="col-md-12">
					{% if filterable %}
						{% include filterUri %}
					{% endif %}
					<div class="portlet box light-grey">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-globe"></i>{{title}}
							</div>
							<div class="actions">
							</div>
						</div>
						<div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover datatable" id="tableManaged">
                                <thead>
                                <tr>
                                    <th>Название</th>
                                    <th>id названия</th>
                                    <th>Логотип</th>
                                    <th>Валидность</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for data in records %}
                                    <tr id="{{data.id}}" class="odd gradeX">
                                        <td>{{data.companyName}}</td>
                                        <td>{{data.name}}</td>
                                        <td>{{data.logo}}</td>
                                        <td>{{data.validity}}</td>
                                        <td>
                                            <a href="{{site_url()}}{{uri_string()}}/{{data.id}}" target="_blank" class="btn btn-outline purple btn-sm"><i class="fa fa-pencil-square-o"></i> Редактировать </a>
                                            <a href="#basic" data-toggle="modal" onClick="urlToModal('{{site_url()}}{{uri_string()}}/{{data.id}}/remove');" class="btn btn-outline red btn-sm"><i class="fa fa-trash-o"></i> Удалить</a>         
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>  
                                {% include 'admin/parts/removeModal.twig' %}               
                            </table>  
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}
