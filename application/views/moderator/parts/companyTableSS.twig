{% extends "admin/adminLayout.twig" %}
{% block content %}
            <div class="row">
				<div class="col-md-12">
					{% if filterable %}
						{% include filterUri %}
					{% endif %}
					<div class="portlet box light-grey">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-globe"></i>{{title}}
							</div>
							<div class="actions">
                                <a href="" class="btn green" onClick="publishCompany();return false;"><i class="fa fa-check-square-o"></i> Опубликовать все компании на текущей странице</a>
								<a href="" class="btn green" onClick="window.open('{{site_url()}}{{uri_string()}}/-1');"><i class="fa fa-plus"></i> Добавить</a>
							</div>
						</div>
						<div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover companyTable" id="companyTable">
                            {% block data %}
			
        	                {% endblock %}
                            </table>  
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}