<label class="col-md-3 control-label">Адреса ТЦ</label>
<div class="col-md-9">
    <div class="portlet box light-grey">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-globe"></i>Адреса ТЦ
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover datatable" id="shoppingCenterBranchofficeTable">
            <thead>
                <tr>
                    <th></th>
                    <th>Название</th>
                    <th>Адрес</th>
                    <th>Категория</th>
                </tr>
            </thead>
            <tbody>
                {% for data in shoppingCenterBranchoffices %}
                <tr id="{{data.id}}">
                    <td>
                        <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                            {% if data.checked %}
                                <input type="checkbox" class="checkboxes" checked waschecked="1" value="{{data.branchofficeId}}">
                            {% else %}
                                <input type="checkbox" class="checkboxes" waschecked="0" value="{{data.branchofficeId}}">
                            {% endif %}
                            <span></span>
                        </label></td>
                    <td>{{data.name}}</td>
                    <td>{{data.address}}</td>
                    <td>
                        <select class="form-control" id="ShoppingCategoryId{{data.branchofficeId}}">
                            {% for shoppingCategory in shoppingCategories %}
                                {% if shoppingCategory.id == data.ShoppingCategoryId %}
                                    <option selected value="{{shoppingCategory.id}}">{{shoppingCategory.name}}</option>
                                {% else %}
                                    <option value="{{shoppingCategory.id}}">{{shoppingCategory.name}}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </td>
                </tr>
                {% endfor %}
            </tbody>             
            </table>
            <br>
            <button id="saveCompanyShoppingCenter" type="button" class="btn green" onClick="saveCompanyShoppingCenterList();return false;">Сохранить список ТЦ</button>  
        </div>
    </div>
</div>