    <div class="col-md-5">
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Адреса компании
                </div>
                <div class="actions">
                    <a href="" class="btn green" onClick="window.open('{{site_url()}}admin/branchoffice/{{companyId}}/0/add');"><i class="fa fa-plus"></i> Добавить</a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover datatable" id="companyBranchofficeTable">
                <thead>
                    <tr>
                        <th>Адрес</th>
                        <th>Город</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for data in branchoffices %}
                        <tr id="{{data.id}}">
                            <td>{{data.address|slice(0,65)}}</td>
                            <td>{{data.cityName}}</td>
                            <td>
                                <a href="{{site_url()}}admin/branchoffice/{{companyId}}/{{data.id}}" target="_blank" class="btn btn-outline purple btn-sm"><i class="fa fa-pencil-square-o"></i> Редакировать </a>
                                <a href="#basic" data-toggle="modal" onClick="urlToModal('{{site_url()}}admin/branchoffice/{{companyId}}/{{data.id}}/remove');" class="btn btn-outline red btn-sm"><i class="fa fa-trash-o"></i> Удалить</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>  
                </table>  
            </div>
        </div>
    </div>