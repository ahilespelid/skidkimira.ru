{% extends "admin/adminLayout.twig" %}
{% block content %}
<h1>Редактирование блоков рекламы</h1>
{% if message %}<h2>{{message}}</h2>{% endif %}
<form method="post">
<table cellpadding="0" cellspacing=10 width="100%" class="table table-bordered table-striped">
    <thead>
        <tr>

        </tr>
    </thead>
    <tbody>
        {% for advkey in adverts|keys %}
        <tr><td>{{advkey}}</td><td><textarea name="adverts[{{advkey}}]" rows="10" cols="100" >{{adverts[advkey]}}</textarea></td><td>{{advertsdescriptions[advkey]}}</td></tr>
        {% endfor %}
        <tr><td></td><td><button type="submit" class="btn green">Сохранить</button></td></tr>        
    </tbody>
</table>
</form>
{% endblock %}