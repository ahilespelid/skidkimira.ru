{% extends "admin/parts/table.twig" %}
{% block data %}
    <thead>
    <tr>
        <th>id</th>
        <th>Название</th>
        <th>Описание</th>
        <th>Цена</th>
        <th>Производитель</th>
        <th>Брэнд</th>
        <th>Ссылка</th>
        <th>Иконка</th>
        <th>Дата добавления</th>
        <th>Пользователь</th>
        <th>Подкатегория</th>
        <th>Тип</th>
        <th>Подтип</th>
        <th>Заказ</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        {% for data in records %}
        <tr id="{{data.id}}">
        <form id="form" name="form">
            <td>{{data.id}}</td>
            <td>{{data.name}}</td>
            <td>{{data.description|slice(0,80)}}...</td>
            <td>{{data.price}}</td>
            <td>{{data.producer}}</td>
            <td>{{data.brand}}</td>
            <td>{{data.viewUrl}}</td>
            <td>{{data.thumbnailUrl}}</td>
            <td>{{data.addDate}}</td>
            <td>{{data.addUserId}}</td>
            <td>{{data.goodsSubCategoryName}}</td>
            <td>{{data.goodsTypeName}}</td>
            <td>{{data.goodsSubTypeName}}</td>
            <td>{{data.offerid}}</td>
            <td>
                <a href="{{site_url()}}{{uri_string()}}/{{data.id}}" target="_blank" class="btn btn-outline purple btn-sm"><i class="fa fa-pencil-square-o"></i> Редактировать </a>
                <a href="#basic" data-toggle="modal" onClick="urlToModal('{{site_url()}}{{uri_string()}}/{{data.id}}/remove');" class="btn btn-outline red btn-sm"><i class="fa fa-trash-o"></i> Удалить</a>         
            </td>
        </tr>
        {% endfor %}
    </tbody>  
    {% include 'admin/parts/removeModal.twig' %}               
{% endblock %}