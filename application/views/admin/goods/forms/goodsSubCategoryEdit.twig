{% extends "admin/parts/form.twig" %}
{% block data %}
    {% if not new %}
        <div class="form-group">
            <label class="col-md-3 control-label">Id</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="id" value="{{record.id}}" readonly> 
            </div>
        </div>
    {% endif %}
        <div class="form-group">
            <label class="col-md-3 control-label">Название</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="name" value="{{record.name}}"> 
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Описание</label>
            <div class="col-md-9">
                <textarea class="form-control" rows="5" name="description" >{{record.description}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Подкатегория</label>
            <div class="col-md-9">
                <select class="form-control" name="goodsCategoryId">
                    {% for goodsCategory in goodsCategories %}
                        {% if goodsCategory.id == record.goodsCategoryId %}
                            <option selected value="{{goodsCategory.id}}">{{goodsCategory.name}}</option>
                        {% else %}
                            <option value="{{goodsCategory.id}}">{{goodsCategory.name}}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Категория сайта</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="siteCategory" value="{{record.siteCategory}}"> 
            </div>
        </div>     
{% endblock %}
        