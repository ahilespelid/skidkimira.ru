{% extends "admin/adminLayout.twig" %}
{% block content %}
<h1>Статистика модерации</h1>
{% if message %}<h2>{{message}}</h2>{% endif %}
<table cellpadding="0" cellspacing=10 width="100%" class="table table-bordered table-striped datatable">
    <thead>
        <tr>
            <th>E-mail</th>
            <th>Компаний</th>
            <th>Города компаний</th>
            <th>Скидки</th>
            <th>Новости</th>
            <th>Комментарии</th>
        </tr>
    </thead>
    <tbody>
    {% for statitem in stat %}
        <tr>
            <td>{{statitem.email}}</td>
            <td><a target="_blank" href="/admin/moderstatdetail/company/{{statitem.id}}">{{statitem.companies}}</a></td>
            <td><a target="_blank" href="/admin/moderstatdetail/companycitydescription/{{statitem.id}}">{{statitem.companycitydescriptions}}</a></td>
            <td><a target="_blank" href="/admin/moderstatdetail/discount/{{statitem.id}}">{{statitem.discounts}}</a></td>
            <td><a target="_blank" href="/admin/moderstatdetail/news/{{statitem.id}}">{{statitem.news}}</a></td>
            <td><a target="_blank" href="/admin/moderstatdetail/comment/{{statitem.id}}">{{statitem.comments}}</a></td>
        </tr>
    {% endfor %}        
    </tbody>
</table>
{% endblock %}