{% extends "admin/adminLayout.twig" %}
{% block content %}
            <div class="row">
				<div class="col-md-12">
					<div class="portlet box light-grey">
						<div class="portlet-title">
							<div class="caption">
								<i class="fa fa-globe"></i>{{title}}
							</div>
							<div class="actions">
							</div>
						</div>
						<div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover datatable" id="tableManaged">
                                <thead>
                                <tr>
                                    <th>Имя пользователя</th>
                                    <th>Текст</th>
                                    <th>Компания</th>
                                    <th>Дата добавления</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for data in records %}
                                    <tr id="{{data.id}}" class="odd gradeX">
                                        <td>{{data.userName}}</td>
                                        <td>
                                            <textarea class="form-control" rows="6" cols="80" style="min-width:300px;">
                                                {{data.text}}
                                            </textarea>
                                        </td>
                                        <td>
                                            {{data.companyName}}
                                        </td>
                                        <td>{{data.addedDate}}</td>
                                        <td>
                                            <a href="#" onClick="acceptComment({{data.id}});return false;" class="btn btn-outline green btn-sm"><i class="fa fa-check-square-o"></i> Одобрить </a>
                                            <a href="#" onClick="declineComment({{data.id}});return false;" class="btn btn-outline red btn-sm"><i class="fa fa-minus-square"></i> Отклонить</a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>             
                            </table>  
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}