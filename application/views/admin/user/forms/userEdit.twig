{% extends "admin/adminLayout.twig" %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>{{title}}
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" action="{% if new %}{{site_url()}}auth/create_user{% else %}{{site_url()}}auth/edit_user{% endif %}" method="post" accept-charset="utf-8">
                    <div class="form-body">
                        {% if not new %}
                            <input id="userId" type="hidden" class="form-control" name="user_id" value="{{record.id}}" > 
                        {% endif %}
                        {% if message %}
                            <div class="alert alert-danger">
								{{message|raw}}
							</div>
                        {% endif %}
                        <div class="form-group">
                            <label class="col-md-3 control-label">Email <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" data-required="1" name="email" value="{{record.email}}">
                            </div>
                        </div>                        
                        <div class="form-group">
                            <label class="col-md-3 control-label">Пароль <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" data-required="1" name="password" value="">
                            </div>
                        </div>                    
                        <div class="form-group">
                            <label class="col-md-3 control-label">Повтор пароля <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" data-required="1" name="password_confirm" value="">
                            </div>
                        </div>                                                
                        <div id="editUserDiv"></div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button id="saveBtn" type="submit" class="btn green">Сохранить</button>
                                <button type="button" class="btn default" onClick="window.opener.location.reload();window.close();">Закрыть</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}