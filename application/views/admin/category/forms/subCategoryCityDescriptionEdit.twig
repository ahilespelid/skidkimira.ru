{% extends "admin/parts/form.twig" %}
{% block data %}
    {% if not new %}
        <div class="form-group">
            <label class="col-md-3 control-label">Id</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="id" value="{{record.id}}" readonly> 
            </div>
        </div>
    {% endif %}
        <div class="form-group">
            <label class="col-md-3 control-label">Описание</label>
            <div class="col-md-9">
                <textarea class="form-control" rows="5" name="description" >{{record.description}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Подкатегория</label>
            <div class="col-md-9">
                <select class="form-control" name="SubCategoryId">
                    {% for subcategory in subCategories %}
                        {% if subcategory.id == record.SubCategoryId %}
                            <option selected value="{{subcategory.id}}">{{subcategory.name}}</option>
                        {% else %}
                            <option value="{{subcategory.id}}">{{subcategory.name}}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Город</label>
            <div class="col-md-9">
                <select class="form-control" name="CityId">
                    {% for city in cities %}
                        {% if city.id == record.CityId %}
                            <option selected value="{{city.id}}">{{city.name}}</option>
                        {% else %}
                            <option value="{{city.id}}">{{city.name}}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
        </div>
{% endblock %}
        