{% if loop.index == 8 %}
	<div class="onlymobile">
		<noindex>
		{{adverts.mobile_catalogitem|raw}}
		</noindex>
	</div>
{% endif %}
{% if loop.index == 16 %}
	<div class="onlymobile">
		<noindex>
		{{adverts.mobile_catalogitem2|raw}}
		</noindex>
	</div>
{% endif %}			
{% if loop.index == 24 %}
	<div class="onlymobile">
		<noindex>
		{{adverts.mobile_catalogitem3|raw}}
		</noindex>
	</div>
{% endif %}			
                {% endfor %}	
                <div class="pagination">

					<ul class="clearfix">
                        {{content.pagination|raw}}
					</ul>

				</div>                
            </div>


			<div class="kakoito-text">
			<!--	{{additional.promotextbtm|raw}} вывод текста для подкатегории Интернет-магазины-->
			</div>

			

		</div>

		{% include 'parts/menu.twig'%}

