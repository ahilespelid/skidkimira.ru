{% extends "admin/adminLayout.twig" %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Редактирование пользователя
                </div>
            </div>
            <div class="portlet-body form">
                <form class="form-horizontal" role="form" method="post" accept-charset="utf-8">
                    <div class="form-body">
                        <input type="hidden" name="id" value="{{user.id}}" />

                        {% if not new %}
                            <input id="userId" type="hidden" class="form-control" name="user_id" value="{{record.id}}" > 
                        {% endif %}
                        <div class="form-group">
                            <label class="col-md-3 control-label">Email <span class="required">*</span></label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" data-required="1" name="email" value="{{email.value}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Группа</label>
                            <div class="col-md-9">          
            {% for group in groups %}
                  <label class="checkbox">
                  {% set gID = group['id'] %}
                  {% set checked = null %}
                  {% set item = null %}
                  {% set checked= ''%}
              <input type="radio" name="groups[]" value="{{group['id']}}" {% for grp in currentGroups %}{% if group.id == grp.id %}checked="checked"{% endif %}{% endfor %}>
              
              {{group['name']|raw}}
              </label>
          {% endfor %}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Пароль: (если изменяется)</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" data-required="1" name="password" value="" id="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Повтор пароля: (если изменяется)</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" data-required="1" name="password_confirm" value="" id="password_confirm">
                            </div>
                            <div id="infoMessage">{{message}}</div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button id="saveBtn" type="submit" class="btn green">Сохранить</button>
                                <button type="button" class="btn default" onClick="window.opener.location.reload();window.close();">Закрыть</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}